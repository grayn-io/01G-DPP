{
  "name": "grayn-server",
  "version": "0.1.0",
  "description": "",
  "main": "app.ts",
  "scripts": {
    "dev:db:create": "docker pull mongo && docker network create grayn-net && docker run -d --name dbgrayn-dev -p 27017:27017 --network grayn-net --network-alias grayn mongo:latest",
    "dev:db:remove": "docker stop dbgrayn-dev && docker rm dbgrayn-dev && docker network rm grayn-net",
    "dev:docker:build": "docker build --progress=plain --tag graynapi .",
    "dev:docker:run": "npm run dev:docker:build && docker run --name graynapi --rm --env MONGODB_URL=mongodb://grayn:27017/grayndb --network grayn-net -p 5000:5000 graynapi",
    "dev": "nodemon app.ts",
    "build": "tsc && cp properties.json dist/properties.json",
    "start": "ts-node --transpile-only app.ts",
    "keys:generate": "ts-node scripts/generateKeypair.ts"
  },
  "author": "Gaute Rauboti",
  "license": "ISC",
  "devDependencies": {
    "@types/bcryptjs": "^2.4.4",
    "@types/cors": "^2.8.13",
    "@types/ejs": "^3.1.2",
    "@types/express": "^4.17.17",
    "@types/express-session": "^1.17.7",
    "@types/morgan": "^1.9.4",
    "@types/node": "^20.1.4",
    "@types/node-cron": "^3.0.8",
    "@types/passport": "^1.0.12",
    "@types/passport-local": "^1.0.35",
    "@types/swagger-ui-express": "^4.1.3",
    "nodemon": "^2.0.22",
    "prettier": "^3.0.2",
    "ts-node": "^10.9.1",
    "typescript": "^5.0.4"
  },
  "dependencies": {
    "@asteasolutions/zod-to-openapi": "^5.1.0",
    "@aws-sdk/client-s3": "^3.400.0",
    "@aws-sdk/client-ses": "^3.391.0",
    "bcryptjs": "^2.4.3",
    "body-parser": "^1.20.2",
    "connect-mongo": "^5.0.0",
    "cors": "^2.8.5",
    "dotenv": "^16.0.3",
    "ejs": "^3.1.9",
    "express": "^4.18.2",
    "express-session": "^1.17.3",
    "mongoose": "^7.1.1",
    "morgan": "^1.10.0",
    "node-cron": "^3.0.2",
    "passport": "^0.6.0",
    "passport-local": "^1.0.0",
    "swagger-ui-express": "^4.6.3",
    "zod": "^3.22.3"
  }
}
